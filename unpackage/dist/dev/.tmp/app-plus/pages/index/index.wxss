.head {
  background: #FFDA44;
}
.head .logo {
    font-size: 40rpx;
    font-weight: bold;
    text-align: center;
    line-height: 120rpx;
}
.head .logo ._img {
      width: 36rpx;
      vertical-align: middle;
      margin-right: 10rpx;
}
.head .census {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}
.head .census .select_month {
      position: relative;
      width: 106rpx;
      padding: 0 30rpx;
}
.head .census .select_month:after {
        content: '';
        position: absolute;
        right: 0;
        top: 25rpx;
        width: 1px;
        height: 50rpx;
        background-color: #666;
}
.head .census .select_month .year {
        line-height: 28rpx;
        font-size: 24rpx;
        color: #666;
}
.head .census .select_month .month {
        line-height: 60rpx;
}
.head .census .select_month .month .big {
          font-size: 38rpx;
}
.head .census .statistic {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
          -ms-flex: 1;
              flex: 1;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-justify-content: space-around;
          -ms-flex-pack: distribute;
              justify-content: space-around;
}
.head .census .statistic .title {
        line-height: 28rpx;
        font-size: 24rpx;
        color: #666;
}
.head .census .statistic .num {
        line-height: 60rpx;
        font-size: 34rpx;
